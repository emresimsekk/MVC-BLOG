    <link href="~/Content/css/articleDetail.css" rel="stylesheet" />

    @RenderSection("head", false)

</head>
<body>
    <header class="row">
        <div class="col-12 header ">
           
            <div class="col-3 logo"><p>Emre ŞİMŞEK</p></div>
            <div class="col-7  ">
